<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.astraapi.repository.SubjectRepository">
    <insert id="save" parameterType="com.example.astraapi.entity.SubjectEntity" useGeneratedKeys="true"
            keyProperty="entity.id">
        insert into public.subjects (title)
        values (#{entity.title});
    </insert>
    <select id="getAll" resultType="com.example.astraapi.entity.SubjectDetailEntity" resultMap="subjects">
        select sub.id     as subjectId,
               sub.title  as subjectTitle,
               spec.id    as specializationId,
               spec.title as specializationTitle
        from public.subjects sub
                 join public.subjects_specializations ss
                      on sub.id = ss.subject_id
                 join public.specializations spec
                      on spec.id = ss.specialization_id
    </select>

    <resultMap type="com.example.astraapi.entity.SubjectDetailEntity" id="subjects">
        <id column="subjectId" property="subjectId"/>
        <result column="subjectTitle" property="subjectTitle"/>
        <collection property="specializations" ofType="com.example.astraapi.entity.SpecializationEntity">
            <id column="specializationId" property="id"/>
            <result column="specializationTitle" property="title"/>
        </collection>
    </resultMap>
</mapper>
