<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.astraapi.repository.SubjectRepository">
    <insert id="save" parameterType="com.example.astraapi.entity.SubjectEntity" useGeneratedKeys="true" keyProperty="entity.id">
        insert into public.subjects (title, specialization_id)
        values (#{entity.title}, #{entity.specializationId});
    </insert>
    <select id="getAllBySpecializationId" resultType="com.example.astraapi.entity.SubjectEntity">
        select *
        from public.subjects
        where specialization_id = #{specializationId}
    </select>
</mapper>

