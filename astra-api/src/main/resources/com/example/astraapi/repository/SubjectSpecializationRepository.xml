<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.astraapi.repository.SubjectSpecializationRepository">
    <insert id="save">
        insert into public.subjects_specializations (specialization_id, subject_id) values
        <foreach collection="specializationIds" item="id" separator=",">
            (#{id}, #{subjectId})
        </foreach>
    </insert>

    <delete id="delete">
        delete from public.subjects_specializations ss where ss.subject_id=#{subjectId} and ss.specialization_id in (
        <foreach collection="specializationIds" item="specializationId" separator=",">
            #{specializationId}
        </foreach>
        )
    </delete>

    <select id="getSpecializationIdBySubjectId" resultType="java.lang.Long">
        select specialization_id
        from astra.public.subjects_specializations
        where subject_id = #{subjectId}
    </select>
</mapper>
